<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:textColor="#000000"
        android:typeface="serif"
        android:padding="30dp"
        android:text="Car Detection"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/process_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="serif"
        android:text="Click process button to upload your video and wait for server's response: "
        android:textAllCaps="false" />

<!--    <ProgressBar-->
<!--        android:id="@+id/progress_bar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        style="?android:attr/progressBarStyleHorizontal"-->
<!--        android:max="100" />-->

    <Button
        android:id="@+id/process_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:typeface="serif"
        android:text="process"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/processed_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="serif"
        android:text="Here is the processed video: "
        android:textAllCaps="false"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/video_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

<!--    <Button-->
<!--        android:id="@+id/next_frame"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:textSize="16sp"-->
<!--        android:typeface="serif"-->
<!--        android:text="next"-->
<!--        android:textAllCaps="false"-->
<!--        android:visibility="invisible"/>-->

    <Button
        android:id="@+id/play_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:typeface="serif"
        android:text="play"
        android:textAllCaps="false"
        android:visibility="invisible"/>

</LinearLayout>